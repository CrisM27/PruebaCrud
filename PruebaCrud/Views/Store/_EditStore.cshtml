@model StoreDto
@using PruebaCrud.Services.DTOs

<div class="modal fade" id="@("EditStore-"+Model.StoreID)" tabindex="-1" aria-labelledby="editStoreModalLabel" aria-hidden="true">
	<div class="modal-dialog modal-lg">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="editStoreModalLabel">Edit Store</h5>
				<button type="button" onclick="javascript: window.location.reload()" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<div class="modal-body">
				<form class="row g-4" method="post" asp-controller="Store" asp-action="UpdateStore">
					<input type="hidden" id="hiddenStoreId" asp-for="StoreID" name="StoreID">
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="col-6 text-start">
						<label for="inputName" class="form-label">Store Name</label>
						<input type="text" class="form-control" id="inputName" asp-for="Name" name="Name" placeholder="Store Name" required>
					</div>
                    <div class="col-12 text-start">
						<label for="inputAddress" class="form-label">Store Address</label>
						<input type="text" class="form-control" id="inputAddress" asp-for="Address" name="Address" placeholder="Address" required>
					</div>
					<div class="modal-footer">
						<div class="col text-start">
							<button type="submit" class="btn btn-success text-start">Save changes</button>
							<button type="button" class="btn btn-warning text-start" data-bs-dismiss="modal">Close</button>
						</div>
						<div class="col text-end">
							<button type="submit" class="btn btn-danger text-end" asp-controller="Store" asp-action="DeleteStore">Delete</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>