@model StoreDto
@using PruebaCrud.Services.DTOs

<div class="modal fade" id="addStoreModal" tabindex="-1" aria-labelledby="addStoreModalLabel" aria-hidden="true">
	<div class="modal-dialog modal-lg">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="addStoreModalLabel">Add Store</h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<div class="modal-body">
				<form class="row g-3" method="post" asp-controller="Store" asp-action="AddStore">
                    <div class="col-12 text-start">
						<label for="inputName" class="form-label">Store Name</label>
                        <input type="text" class="form-control" id="inputName" asp-for="Name" name="Name" placeholder="Name" required>
					</div>
                    <div class="col-3 text-start">
                        <label for="inputCountry" class="form-label">Country</label>
                        <input type="text" class="form-control" id="inputCountry" asp-for="Country" name="Country" placeholder="Country" required>
                    </div>
                    <div class="col-3 text-start">
                        <label for="inputState" class="form-label">State</label>
                        <input type="text" class="form-control" id="inputState" asp-for="State" name="State" placeholder="State" required>
                    </div>
                        <div class="col-3 text-start">
                        <label for="inputCity" class="form-label">City</label>
                        <input type="text" class="form-control" id="inputCity" asp-for="City" name="City" placeholder="City" required>
                    </div>
                    <div class="col-3 text-start">
                        <label for="inputZip" class="form-label">Zip</label>
                        <input type="text" class="form-control" id="inputZip" asp-for="Zipcode" name="Zipcode" placeholder="Name" required>
                    </div>
                    <div class="col-12 text-start">
						<label for="inputAddress" class="form-label">Address</label>
                        <input type="text" class="form-control" id="inputAddress" asp-for="Address" name="Address" placeholder="Address" required>
					</div>
					<div class="modal-footer">
						<button type="button" class="btn btn-warning" data-bs-dismiss="modal">Close</button>
						<button type="submit" class="btn btn-success">Save changes</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>